{% set pdf_url = file_url(content.field_media[0]['#media'].field_media_file.entity.uri.value) %}

<div class="job-posting-card">
  {% if content.field_job_category|field_value is not empty %}
    <a href="{{ content.field_job_category[0]['#url'] }}"
         class="category btn-link">{{ content.field_job_category[0]['#title'] }}</a>
  {% endif %}
  <a id="node-{{ node.id }}" href="{{ pdf_url }}" download="download" target="_blank">
    <h4 class="underline">{{ label[0]['#context'].value }}</h4>
    <div class="specs">
      {% if content.field_date|field_value is not empty
        or content.field_date_closing|field_value is not empty %}
        <div class="date">
          {{ 'Listed'|t }}: {{ content.field_date[0]['#text'] }}<br/>
          {{ 'Apply by'|t }}: {{ content.field_date_closing[0]['#text'] }}
        </div>
      {% endif %}
      {% if content.field_job_number|field_value is not empty %}
        <div class="tags">
          <div class="job-number">
            {{ content.field_job_number }}
          </div>
        </div>
      {% endif %}
    </div>
  </a>
</div>
